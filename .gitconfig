[user]
	name = Rick Mather
	email = xxxxxx
[core]
	editor = vim
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	co = checkout
	cb = checkout -b
	br = branch
	ci = commit
	st = status
	unstage = reset HEAD --
	un = reset HEAD --
	backout = reset --soft HEAD^1
	merged = branch --merged
	mergedr = branch -r --merged
	unmerged = branch --no-merged
	unmergedr = branch -r --no-merged
[merge]
        tool = kdiff3
[mergetool "kdiff3"]
        path = c:/Program Files (x86)/KDiff3/kdiff3.exe
	keepBackup = false
	trustExitCode = false
[diff]
        tool = kdiff3
        guitool = kdiff3
[difftool "kdiff3"]
        path = c:/Program Files (x86)/KDiff3/kdiff3.exe
	cmd = \"C:\\\\Program Files (x86)\\\\KDiff3\\\\kdiff3\" $BASE $LOCAL $REMOTE $MERGED
[push]
	default = simple
